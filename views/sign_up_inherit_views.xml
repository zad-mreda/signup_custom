<odoo>
    <data>

        <template id="signup_custom.fields_inherit" inherit_id="auth_signup.fields" name="Auth Signup/ResetPassword form fields custom">
        <xpath expr="//div[hasclass('field-confirm_password')]"   position="after">
            <div class="mb-3 field-mobile">
                <label for="mobile">Mobile</label>
                <input type="text" name="mobile" t-att-value="mobile" id="mobile" class="form-control form-control-sm" />
            </div>
        </xpath>
    </template>

    </data>

</odoo>